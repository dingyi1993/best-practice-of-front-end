{
    "env": {
        "browser": true,
        "node": true
    },
    "globals": {
        "common": true,
        "plugins": true
    },
    /*"extends": "eslint:recommended",*/
    "rules": {
        /* usually */
        "no-unused-vars": 1,
        "comma-dangle": [2, "never"],
        "no-cond-assign": [2, "always"],
        "no-console": 1,
        "no-constant-condition": 2,
        "no-extra-parens": [2, "functions"],
        "no-extra-semi": 2,
        "no-func-assign": 2,
        "no-inner-declarations": [2, "both"],
        "no-invalid-regexp": 2,
        "no-irregular-whitespace": 2,
        "no-obj-calls": 2,
        "no-regex-spaces": 1,
        "no-sparse-arrays": 2,
        "no-unexpected-multiline": 2,
        "no-unreachable": 2,
        "use-isnan": 2,
        "valid-typeof": 2,
        "valid-jsdoc": 1,
        "block-scoped-var": 2,

        /* little */
        "no-control-regex": 2,
        "no-empty-character-class": 2,
        "no-ex-assign": 2,
        "no-negated-in-lhs": 1,
        "accessor-pairs": 2,
        "complexity": [1, 3],

        /* recommended */
        "no-debugger": 2,
        "no-dupe-args": 2,
        "no-dupe-keys": 2,
        "no-duplicate-case": 2,
        "no-empty": 2,
        "no-extra-boolean-cast": 2
            /* "camelcase": 2,
             "curly": 2,
             "brace-style": [2, "1tbs"],
             "quotes": [2, "single"],
             "semi": [2, "always"],
             "object-curly-spacing": [2, "never"],
             "space-infix-ops": 2*/
    },
    "ecmaFeatures": {
        "regexYFlag": true,
        "regexUFlag": true
    }
}